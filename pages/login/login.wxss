.logins{margin-top:100rpx;}
.logins h2{font-size:50rpx;padding-bottom:30rpx;text-align: center;display: block}

.formWrap{padding:50rpx 80rpx;}
.formWrap .section{padding-bottom:40rpx;}
.formWrap .section input{border:1rpx solid #ccc;margin-top:20rpx;background:#f9f9f9;border-radius: 20rpx;line-height: 40rpx;padding:30rpx;}
.btn-area{padding-top: 50rpx;}
.formWrap .section .section__title{padding-bottom:10rpx;}


.header {
    background: #ff4447;
    margin: 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
    border-radius: 30rpx;
}
 
.header image {
    width: 280rpx;
    height: 90rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 30rpx;
    margin: 70rpx 50rpx;
    padding:10rpx 0;
    font-size: 40rpx;
}

.modalSkin input{border:1rpx solid #ccc;margin-top:20rpx;background:#f9f9f9;border-radius: 20rpx;line-height: 40rpx;padding:20rpx;}
.modalSkin input:first-child{margin-top:20rpx;}