<import src="../../wxParse/wxParse.wxml" />


<view class="container">
  <view class="show_content">
    <h1>{{title}}</h1>
    <view class="cont">
      <template is="wxParse" data="{{wxParseData:article.nodes}}" />
      <view class="shareArea">
        <button open-type="share" size='default' type="warn">分享给好友</button>
      </view>
    </view>
  </view>
  <view class="guess">
    <h2>猜你喜欢</h2>
    <view class="layout_vertical">
      <view wx:for="{{contentArray}}" class="listViews" wx:for-index="i" wx:for-item="item" data-text="{{item.title}}">
        <navigator url="../show_detail/show_detail?classid={{item.classid}}&id={{item.id}}" hover-class="navigator-hover">
          <image bindtap="s" style="width:320rpx;height:240rpx;border-radius:10rpx;" src="{{item.titlepic}}"></image>
          <h3>{{item.title}}</h3>
        </navigator>
      </view>
    </view>
  </view>
</view>